@{
    Layout = "~/Areas/Sys/Views/Shared/_DetailLayoutPage.cshtml";
}
<style>
    .center_box {
        height: 90px;
        border: 0px;
    }

        .center_box li {
            height: 28px;
            margin-left: 20px;
        }

    .detail_box_left {
        width: 50px;
    }
</style>
<div class="easyui-layout" data-options="fit:true,border:false">
    <div data-options="region:'north',border:false" style="height: 36px; background-color: #fff;border-bottom: 1px solid #ccc;padding: 3px;">
        <div class="detail_box_left" style="width: 80px"><a href="#" class="easyui-linkbutton" plain="true" onclick="DoSearch()" icon="icon-search">搜索</a></div>
        <div class="detail_box_right"><a href="#" class="easyui-linkbutton" plain="true" icon="icon-ok">选择</a></div>
    </div>
    <div data-options="region:'center',border:false">
        <div class="easyui-layout" data-options="fit:true,border:false">
            <div data-options="region:'north',border:false">
                <input type="hidden" value="3333" id="dd" />
                <ul class="center_box">
                    <li>
                        <label class="detail_box_left">订单号</label>
                        <div class="detail_box_right ExOrderNoLike">
                            ：<input type="text" id="ExOrderNoLike" name="ExOrderNoLike" class="easyui-textbox" />
                        </div>
                    </li>
                    <li>
                        <label class="detail_box_left">vip卡号</label>
                        <div class="detail_box_right">
                            ：<input type="text" id="VIPNo" name="VIPNo" class="easyui-textbox" />
                        </div>
                    </li>
                    <li>
                        <label class="detail_box_left">手机号</label>
                        <div class="detail_box_right">
                            ：<input type="text" id="Mobile" name="Mobile" class="easyui-textbox" />
                        </div>
                    </li>
                    <li>
                        <label class="detail_box_left">商品名称</label>
                        <div class="detail_box_right">
                            ：<input type="text" id="ExOrderGoodName" name="ExOrderGoodName" class="easyui-textbox" />
                        </div>
                    </li>
                    <li>
                        <label class="detail_box_left">客户名称</label>
                        <div class="detail_box_right">
                            ：<input type="text" id="VipCusName" name="VipCusName" class="easyui-textbox" />
                        </div>
                    </li>
                    <li>
                        <label class="detail_box_left">取货方式</label>
                        <select id="GetWay" class="easyui-combobox" style="width: 110px;">
                            <option value="">全部</option>
                            <option value="到店取货">到店取货</option>
                            <option value="邮寄">邮寄</option>
                        </select>
                    </li>
                    <li>
                        <label class="detail_box_left">订单状态</label>
                        <select id="orderState" class="easyui-combobox" style="width: 110px;">
                            <option value="">全部</option>
                            <option value="1">未支付</option>
                            <option value="2">待发货</option>
                            <option value="3">已发货</option>
                            <option value="4">待评价</option>
                            <option value="5">已完成</option>
                            <option value="6">待取货</option>
                            <option value="10">已关闭</option>
                        </select>
                    </li>
                    <li>
                        <label class="detail_box_left">退货状态</label>
                        <select id="takeGoodsState" class="easyui-combobox" style="width: 110px;">
                            <option value="">全部</option>
                            <option value="1">审核中</option>
                            <option value="2">待退货</option>
                            <option value="3">已发货</option>
                            <option value="5">已完成</option>
                            <option value="10">已关闭</option>
                        </select>
                    </li>
                    <li code_name="StarTime">
                        <label class="detail_box_left">开始时间</label>
                        <div class="detail_box_right">
                            ：<input type="text" id="starTime" name="starTime" class="Wdate" value="@Html.Raw(DateTime.Now.AddDays(-7).ToString("yyyy-MM-dd") + " 00:00:00")" onclick="WdatePicker({ dateFmt: 'yyyy-MM-dd HH:mm:ss' })" />
                        </div>
                    </li>
                    <li code_name="StarTime">
                        <label class="detail_box_left">结束时间</label>
                        <div class="detail_box_right">
                            ：<input type="text" id="endTime" name="endTime" class="Wdate" value="@Html.Raw(DateTime.Now.ToString("yyyy-MM-dd") + " 23:59:59")" onclick="WdatePicker({ dateFmt: 'yyyy-MM-dd HH:mm:ss' })" />
                        </div>
                    </li>
                </ul>
            </div>
            <div data-options="region:'center',border:false">
                <table id="dg" border="0" pagination="true" sortName="itemid" sortOrder="desc" title="订单列表"
                       singleSelect="true" fitColumns="true">
                    <thead>
                        <tr>
                            <th data-options="field:'ExOrderNo',align: 'center'">订单号</th>
                            <th data-options="field:'VipCusName',align: 'center'">下单用户</th>
                            <th data-options="field:'TelPhone',align: 'center'">手机号码</th>
                            <th data-options="field:'ExGoodName',align: 'center'">商品名称</th>
                            <th data-options="field:'StatuText',align: 'center'">订单状态</th>
                            <th data-options="field:'SaleName',align: 'center'">规格</th>
                            <th data-options="field:'AddTime',align: 'center'">下单时间</th>
                            <th data-options="field:'Remark',align: 'center'">备注</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>

    </div>
</div>
@{
    string scripts = @"<script src='/Scripts/Areas/Inv/MallOrderPlugin/Edit.js'></script>
    <script src='/Scripts/easyui-extend/datagrid-detailview.js'></script>
    <script src='/Scripts/lodash.min.js'></script>";
    @Html.JsCssRander(scripts);
}
